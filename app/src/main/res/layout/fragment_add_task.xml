<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingLeft="15dp">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/task_edittext"
                android:layout_width="457dp"
                android:layout_height="66dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/apptodo"
                android:backgroundTint="#7B1818"
                android:ems="10"
                android:hint="Task"
                android:inputType="textPersonName"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/taskdescriptipn_edittext"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_margin="10dp"
                android:background="@drawable/apptodo"
                android:backgroundTint="#7B1818"
                android:ems="10"
                android:hint="Task Descripition "
                android:inputType="textPersonName"
                android:paddingLeft="15dp" />

            <DatePicker
                android:id="@+id/task_datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:headerBackground="#7B1818" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:backgroundTint="#7B1818"
                android:gravity="center"
                android:text="SAVE"
                android:textSize="24sp"
                app:cornerRadius="15dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>